@model MvcStok.Models.Entity.tblsatislar
@{
    ViewBag.Title = "YeniSatis";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <h2>Yeni Satış Paneli</h2>
    <br />
    <label>Ürün Adı</label>
    @Html.TextBoxFor(x => x.urun, new { @class = "form-control" })
    <br />

    <label>Personel Adı</label>
    @Html.TextBoxFor(x => x.personel, new { @class = "form-control" })
    <br />

    <label>Müşteri Adı</label>
    @Html.TextBoxFor(x => x.musteri, new { @class = "form-control" })
    <br />

    <label>Ürün Fiyat</label>
    @Html.TextBoxFor(x => x.fiyat, new { @class = "form-control" })
    <br />
    <button class="btn btn-info">Satış Yap</button>
</form>

